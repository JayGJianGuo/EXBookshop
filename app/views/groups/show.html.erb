<div class="row">
  <div class="container">
    <div class="col-md-12">
      <div class="group">
        <span>
          <% if current_user && current_user.is_member_of?(@group) %>
            <label class="label label-success">群组成员</label>
          <% else %>
            <label class="label labe-warning">不是群组成员</label>
          <% end %>
        </span>
        <% if current_user && current_user == @group.user %>
          <%= link_to("编辑", edit_group_path(@group), class: "btn btn-primary pull-right")%>
        <% end %>

        <%= link_to("发表心得", new_group_post_path(@group), class: "btn btn-default pull-right")%>

      </div>
      <h2><%= @group.title %></h2>
      <p><%= @group.description %></p>

      <table class="table">
        <thead>
          <tr>
            <th>文章标题</th>
            <th>文章内容</th>
            <th>发表者</th>
            <th>发表时间</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.content %></td>
              <td><%= post.user.email %></td>
              <td><%= post.created_at.to_s(:long) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

        <div class="text-center">
          <%= will_paginate @posts %>
        </div>

    </div>
  </div>
</div>
