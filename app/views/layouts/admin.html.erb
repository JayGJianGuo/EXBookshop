<!DOCTYPE html>
<html>
  <head>
    <title>EXBookshop 后台</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <%= render 'common/navbar' %>
      <div class="row">
        <div class="col-md-1">
          <ul class="nav nav-pills nav-stacked text-center" style="max-width: 300px;">
            <li><%= link_to("商品", admin_products_path) %></li>
            <li><%= link_to("订单", admin_orders_path) %></li>
          </ul>
        </div>
        <div class="col-md-11">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
