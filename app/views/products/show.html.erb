<div class="productDetail">

  <div class="container">
    <div class="row">
      <div class="col-md-4 col-xs-4">
        <div class="productDetail-left">

          <div class="productDetail-left-bigImage">
           <% if @photos.present? %>
             <% @photos.each_with_index do |p, index| %>
               <% if index == 0 %>
                 <%= image_tag p.avatar.medium.url %>
                 <div style="letter-spacing: -8px">
               <% else %>
                 <%= image_tag p.avatar.thumb.url %>
               <% end %>
             <% end %>
             </div>
           <% else %>
               <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
           <% end %>
          </div>

        </div>
      </div>

      <div class="col-md-6 col-xs-6 pull-right">

            <div class="row">
              <h2 class="title-cl-1"><%= @product.title %></h2>
            </div>

            <div style="row">
              <p>
                <%= simple_format(@product.description) %>

              </p>
            </div>

            <div class="row">
              库存：<%= @product.quantity %> 件
            </div>

            <div class="row product-price">
              ￥ <%= @product.price %>
            </div>

          <br>

          <div class="row">
            <div class="pull-right">
              <% if @product.quantity.present? && @product.quantity > 0 %>
                <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post, class: "btn btn-success btn-lg fa fa-cart-plus") %>
              <% else %>
                <button class="btn btn-lg btn-default" disabled, style="color: #BA3E35;">已销售一空，无法购买</button>
              <% end %>
            </div>
          </div>

      </div>
    </div>
  </div>
</div>
