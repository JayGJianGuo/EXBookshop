<div class="row">
  <div class="container">

    <div class="col-md-12">

      <h2 class="text-center title-cl-1"> 我的兴趣组 </h2>
    <br>
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th> 组名 </th>
            <th> 简介 </th>
            <th> 文章数量 </th>
            <th> 最近的访问记录 </th>
            <th> 操作选项 </th>
          </tr>
        </thead>

        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td> <%= link_to(group.title, group_path(group)) %> </td>
              <td> <%= simple_format(group.description) %></td>
              <td> <%= group.posts.count %> </td>
              <td> <%= group.updated_at.to_s(:long) %> </td>
              <td>
                <% if current_user && current_user == group.user %>
                <div class="btn-group">
                  <%= link_to("编辑", edit_group_path(group), class: "btn btn-sm btn-primary")%>
                  <%= link_to("删除", group_path(group),    class: "btn btn-sm btn-danger",
                              method: :delete, data: { confirm: "Are you sure?" } )%>
                </div>
                <% else %>
                  <%= link_to("您没有权限！", groups_path, class: "btn btn-defult") %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
