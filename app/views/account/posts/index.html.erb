<div class="row">
  <div class="container">

    <div class="col-md-12">

      <h2 class="text-center"> 我发表过的文章 </h2>

      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th> 标题</th>
            <th> 文章内容 </th>
            <th> 所在兴趣组 </th>
            <th> 最新记录 </th>
            <th> 操作选项</th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td> <%= link_to(post.title, group_post_path(@group, post)) %></td>
              <td> <%= post.content %> </td>
              <td> <%= post.group.title %> </td>
              <td> <%= post.updated_at.to_s(:long) %> </td>
              <td>
                <div class="btn-group">
                 <%= link_to('编辑', edit_group_post_path(post.group, post), class: "btn btn-primary btn-xs") %>
                 <%= link_to('删除', group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs") %>
               </div>
             </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
