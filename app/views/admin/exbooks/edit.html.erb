<h2>Edit Exbook</h2>

<%= simple_form_for [:admin, @exbook] do |f|%>

  <div class="group">
    <%= f.input :title, label: "书名" %>
  </div>
  <div class="group">
    <%= f.input :booktype, label: "类型" %>
  </div>
  <div class="group">
    <%= f.input :description, label: "介绍" %>
  </div>
  <div class="group">
    <%= f.input :quantity, label: "可交换数量" %>
  </div>

   <% if @exbook.image.present? %>
     <span>目前商品图</span> <br>
     <%= image_tag(@exbook.image.thumb.url) %>
   <% end %>

   <div class="group">
     <%= f.input :image, as: :file %>
   </div>

  <%= f.submit "提交", class: "btn btn-primary pull-right", data: { disable_with: "上传中……" } %>

<% end %>
