<h2>New Exbook</h2>

<%= simple_form_for [:admin, @exbook] do |f|%>

  <div class="group">
    <%= f.input :title, label: "书名" %>
  </div>
  <div class="group">
    <%= f.input :booktype, label: "类型" %>
  </div>
  <div class="group">
    <%= f.input :description, label: "介绍" %>
  </div>
  <div class="group">
    <%= f.input :quantity, label: "可交换数量" %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file, label: "封面图片" %>
    <%#= f.label :avatar %>
    <%#= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
  </div>

  <%= f.submit "提交", class: "btn btn-primary pull-right", data: { disable_with: "上传中……" } %>

<% end %>
