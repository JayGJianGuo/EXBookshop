<h2>商品列表</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class:'btn btn-primary btn-sm') %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width='220'>商品图片</th>
      <th>商品名称</th>
      <th>单价</th>
      <th width='150'>操作选项</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td>
        <%= link_to product_path(product) do %>
          <% if product.image.present? %>
            <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>
        <% end %>
      </td>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td>

        <div class="btn-group-vertical" role="group">
          <%= link_to("编辑", edit_admin_product_path(product), class: "btn btn-primary text-center") %>
          <%= link_to("删除", admin_product_path(product), method: :delete, class: "btn btn-danger text-center") %>
        </div>


      </td>
    </tr>
    <% end %>
  </tbody>
</table>
