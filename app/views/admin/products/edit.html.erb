<h2>编辑商品</h2>

<%= simple_form_for [:admin, @product] do |f|%>

  <div class="group">
    <%= f.input :title, label: "商品名称" %>
  </div>
  <div class="group">
    <%= f.input :description, label: "商品信息" %>
  </div>
  <div class="group">
    <%= f.input :quantity, label: "库存数量" %>
  </div>
  <div class="group">
    <%= f.input :price, label: "单价" %>
  </div>

  <%= f.submit "提交", class: "btn btn-primary pull-right", data: { disable_with: "上传中……" } %>

<% end %>
