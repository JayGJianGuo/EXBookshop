<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <% if @photos.present? %>
       <% @photos.each_with_index do |p, index| %>
         <% if index == 0 %>
           <%= image_tag p.avatar.medium.url %>
           <div style="letter-spacing: -8px">
         <% else %>
           <%= image_tag p.avatar.thumb.url %>
         <% end %>
       <% end %>
       </div>
     <% else %>
         <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
     <% end %>
    </div>

    <div class="col-xs-6 col-md-6">
      <h2> <%= @exbook.title %> </h2>
      <div style="height:100px;">
        <p>
          <%= @exbook.description %>
        </p>
      </div>
      <div> 可交换数量 : <%= @exbook.quantity %> </div>
      <div class="exbook-type"> | <%= @exbook.booktype %> </div>
      <div class="pull-right">
        <%= link_to("加入心愿单", "#", :class => "btn btn-primary btn-lg btn-danger") %>
      </div>
      </div>
  </div>
</div>
